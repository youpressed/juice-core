<div class="row-blue group" data-test-id="date-label-row">
  <div class="flex items-baseline">
    <div class="text-base italic mr-4">{{index}}.</div>
    <div class="flex items-center text-2xl" data-test-id="date-row-date-label">
      <div class="bold">{{moment-format model.date "ddd" "YYYY-MM-DD"}}</div>
      <span class="ml-2 mr-2">-</span>
      <div class="bold">{{moment-format model.date "MM/DD" "YYYY-MM-DD"}}</div>
    </div>
  </div>
  <div class="flex items-center">
    <div class="flex items-baseline">
      <p class="text-2xl" data-test-id="date-row-total-count">{{totalCount}}</p>
      <p class="text-base ml-4">Total Units</p>
    </div>
    <div data-tether-id="menu">
      {{fa-icon
        "cog"
        class="ml-4 text-2xl text-grey-darkest"
        click=(action "toggleExtrasMenu")
      }}
    </div>
  </div>
</div>

{{#if isShowingExtrasMenu}}
  {{#modal-dialog
    animatable=true
    hasOverlay=false
    clickOutsideToClose=true
    onClose=(action "toggleExtrasMenu")
    targetAttachment="bottom right"
    attachment="top left"
    tetherTarget="[data-tether-id='menu']"
  }}
    <div class="bg-grey-lightest shadow p-6 rounded-lg">
      <div class="flex flex-col">
        {{ui/label-button
          label="delete"
          class="btn-red"
          click=(action "handleDestroyClicked")
          icon="close"
        }}
      </div>
    </div>
  {{/modal-dialog}}
{{/if}}
