<div
  class="card-blue flex items-stretch justify-between shadow"
  data-test-line-item-row
>
  <div class="text-3xl font-light flex items-center">
    <div class="ml-4 cursor-pointer bg-blue-lightest text-base">
      {{#if isDeleteable}}
        <button class="text-grey" {{action (action handleDestroy model)}} tabindex="-1">
          {{fa-icon "trash"}}
        </button>
      {{/if}}
    </div>

    <div class="">
      {{#link-to
        (node-link-path model.b)
        model.b.id
        data-test-line-item-name
        tabindex="-1"
      }}
        <p class="p-4" data-test-label>{{model.b.label}}</p>
      {{/link-to}}
    </div>
  </div>

  <div class="flex items-stretch">
    <div class="flex">
      <div class="flex items-center mr-2 p-4 qty-input" data-test-edge-quantity>
        {{input
          class="w-24 mr-2 bg-transparent text-3xl font-bold text-grey-darker text-right"
          value=model.q
          key-up=(action handleUpdate model "q")
          placeholder="0"
        }}
      </div>

      {{#if (not (is-empty uoms))}}
        <div class="flex items-center px-4 uom">
          <div class="w-12">
            {{#power-select
              tabindex="-1"
              selected=model.uom
              options=uoms
              onchange=(action handleUpdate model "uom")
            as |option|
            }}
              {{option}}
            {{/power-select}}
          </div>
        </div>
      {{/if}}
    </div>
  </div>
</div>
