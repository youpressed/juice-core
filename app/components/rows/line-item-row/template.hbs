<div class="card-blue flex items-stretch justify-between shadow">
  <div class="text-3xl font-light flex items-center">
    <div class="ml-4 cursor-pointer bg-blue-lightest text-base">
      <button {{action (action deleteEdge model)}}>
        <span class="text-grey">{{fa-icon "trash"}}</span>
      </button>
    </div>

    <div class="">
      {{#link-to
        (node-link-path model.b)
        model.b.id
        data-test-line-item-name
      }}
        <p class="p-4">{{model.b.label}}</p>
      {{/link-to}}
    </div>
  </div>

  <div class="flex items-stretch">
    <div class="flex">
      <div class="flex items-centermr-2 grad-green p-4">
        <input
          class="w-16 mr-2 bg-transparent text-3xl font-bold text-grey-darker text-right"
          value={{model.q}}
          oninput={{action
            (action
              handleUpdate
              model
              "q")
            value="target.value"
          }}
          data-test-line-item-qty
        >
      </div>

      {{#unless (is-empty uoms)}}
        <div class="flex items-center px-4 uom">
          <div class="w-12">
            {{#power-select
              selected=model.uom
              options=uoms
              onchange=(action handleUpdate model "uom")
            as |option|
            }}
              {{option}}
            {{/power-select}}
          </div>
        </div>
      {{/unless}}
    </div>
  </div>
</div>
